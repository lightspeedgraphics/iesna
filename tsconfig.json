{
  "include": ["**/*.ts"],

  "compilerOptions": {
    "baseUrl": ".",

    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
